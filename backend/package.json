{
  "name": "allakando-backend",
  "version": "1.0.0",
  "description": "Backend API for Allakando tutoring platform",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "migrate": "node src/database/migrate.js",
    "migrate:create": "node src/database/createMigration.js",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "pg": "^8.11.3",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "jest": "^30.0.3",
    "nodemon": "^3.0.1",
    "supertest": "^7.1.1"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": ["**/__tests__/**/*.js", "**/?(*.)+(spec|test).js"],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/database/migrations/**"
    ]
  },
  "keywords": [
    "tutoring",
    "api",
    "postgresql"
  ],
  "author": "",
  "license": "MIT"
}
